<Window x:Class="Wpf_Paint_Lab8_Egmilan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Paint_Lab8_Egmilan"
        mc:Ignorable="d"
        Title="Paint" Height="648" Width="1152"
        Background="#f1f3f9"
        Icon= "/Images/icons8-microsoft-paint-32.ico">

    <Window.Resources>
        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse 
                        Fill="{TemplateBinding Tag}" 
                        Stroke="Gray" 
                        StrokeThickness="1" />
                            <Image 
                        Source="{TemplateBinding Content}" 
                        Width="30" Height="30" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <!-- Usage -->
    <!-- Make sure to handle Click event -->

    <!-- Usage
    <Button Style="{StaticResource CircleButton}" Background="Blue" Content="OK"/>-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="8" Fill="#f8f9fc" HorizontalAlignment="Stretch" Height="110" Grid.Row="1" Stroke="#f1f3f9" VerticalAlignment="Stretch"/>

        <InkCanvas x:Name="Canvas" Background="#f8f9fc" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="6" Margin="72,5,72,0" />

        <ScrollBar Grid.Column="7" HorizontalAlignment="Left" Height="442" Margin="118,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="26"/>

        <Button Content="File" HorizontalAlignment="Left" Height="40" VerticalAlignment="Center" Width="50" BorderThickness="0" Background="#f1f3f9" FontSize="16"/>
        <Button Content="Edit" HorizontalAlignment="Left" Height="40" Margin="60,0,0,0" VerticalAlignment="Center" Width="50" Grid.ColumnSpan="2" BorderThickness="0" Background="#f1f3f9" FontSize="16"/>
        <Button Content="View" HorizontalAlignment="Left" Height="40" Margin="20,0,0,0" VerticalAlignment="Center" Width="50" BorderThickness="0" Background="#f1f3f9" Grid.Column="1" Click="Button_Click" FontSize="16"/>
        <Button x:Name="SaveButton" HorizontalAlignment="Left" Height="40" Margin="80,0,0,0" VerticalAlignment="Center" Width="50" BorderThickness="0" Background="#f1f3f9" Grid.Column="1" Click="Button_Click" FontSize="16">
            <Image Source="/Images/saveas_5165.png" Height="20" Width="23"/>
        </Button>
        <Button x:Name="ShareButton" Panel.ZIndex="10" HorizontalAlignment="Left" Height="40" Margin="140,0,0,0" VerticalAlignment="Center" Width="50" BorderThickness="0" Background="#f1f3f9" Grid.Column="1" Click="Button_Click" Grid.ColumnSpan="2">
            <Image Source="/Images/share.png" Height="20" Width="25" />
        </Button>

        <Button x:Name="UndoButton"  HorizontalAlignment="Left" Height="40" VerticalAlignment="Center" Width="50" BorderThickness="0" Background="#f1f3f9" Grid.Column="2" Click="Button_Click">
            <Image Source="/Images/arrow.png" Height="24" Width="20"/>
        </Button>
        <Button x:Name="RedoButton" HorizontalAlignment="Left" Height="40" Margin="55,0,0,0" VerticalAlignment="Center" Width="50" BorderThickness="0" Background="#f1f3f9" Grid.Column="2" Click="Button_Click">
            <Image Source="/Images/redoArrow.PNG" Height="28" Width="20" />
        </Button>

        <!--Selection Column-->
        <Button  HorizontalAlignment="Center" Panel.ZIndex="10" Height="39" Margin="0,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="40" Background="#f8f9fc" BorderThickness="0">
            <Image Source="/Images/selection-symbol-for-interface-of-a-square-of-broken-line.png" Width="27"/>
        </Button>
        <TextBlock Height="17" Panel.ZIndex="10" Margin="25,87,25,0" Grid.Row="1" TextWrapping="Wrap" Text="Selection" VerticalAlignment="Top"/>
        <Button Panel.ZIndex="10" Background="#f8f9fc" BorderThickness="0" Height="18" Grid.Row="1" Width="40" Margin="30,55,30,37">
            <Image Source="/Images/arrow-down-sign-to-navigate.png" Height="18" Width="12"/>
        </Button>

        <!--Image Column-->
        <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="110" Grid.Row="1" Stroke="#f1f3f9" VerticalAlignment="Center" Width="2"/>
        <Button Grid.Column="1" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="26" Margin="15,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="23">
            <Image Source="/Images/icons8-crop-48.png" />
        </Button>
        <Button Grid.Column="1" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="26" Margin="15,51,0,0" Grid.Row="1" VerticalAlignment="Top" Width="23">
            <Image Source="/Images/icons8-background-remover-48.png" Height="25" Width="23" />
        </Button>
        <Button Grid.Column="1" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="34" Margin="130,36,0,0" Grid.Row="1" VerticalAlignment="Top" Width="40" RenderTransformOrigin="0.347,0.591">
            <Image Source="/Images/resize.png" HorizontalAlignment="Center" Height="35" Width="30"/>
        </Button>
        <TextBlock Grid.Column="1"  Height="17" Margin="78,87,78,0" Grid.Row="1" TextWrapping="Wrap" Text="Image" VerticalAlignment="Top"/>
        <Button Grid.Column="1" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="26" Margin="66,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="29">
            <Image Source="/Images/47182-08fba5488a362df6a81736262bb706a5-removebg-preview.png" Height="25" Width="26" />
        </Button>
        <Button Grid.Column="1" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="26" Margin="65,51,0,0" Grid.Row="1" VerticalAlignment="Top" Width="30">
            <Image Source="/Images/icons8-flip-48.png" Height="25" Width="28" />

        </Button>
        <Button Grid.Column="1" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="26" Margin="95,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="20">
            <Image Source="/Images/arrow-down-sign-to-navigate.png" Height="10" Width="10"/>
        </Button>

        <Button Grid.Column="1" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="24" Margin="95,53,0,0" Grid.Row="1" VerticalAlignment="Top" Width="20">
            <Image Source="/Images/arrow-down-sign-to-navigate.png" Height="10" Width="10"/>
        </Button>
        <!--<Border BorderBrush="#f1f3f9" BorderThickness="2" HorizontalAlignment="Center" Height="110" Grid.Row="1" VerticalAlignment="Center" Width="100"/>-->

        <!--Tools Column-->
        <Rectangle Grid.Column="2" HorizontalAlignment="Left" Height="110" Grid.Row="1" Stroke="#f1f3f9" VerticalAlignment="Center" Width="2"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Center" Height="17" Margin="0,87,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Tools" VerticalAlignment="Top" Width="30"/>
        <Button Grid.Column="2" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="26" Margin="16,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="30">
            <Image Source="/Tools Images/pencil.png" />
        </Button>
        <Button Grid.Column="2" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="26" Margin="16,53,0,0" Grid.Row="1" VerticalAlignment="Top" Width="30">
            <Image Source="/Tools Images/eraser.png" />
        </Button>

        <Button Grid.Column="2" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Center" Height="26" Margin="0,55,0,0" Grid.Row="1" VerticalAlignment="Top" Width="30" Click="Button_Click_1">
            <Image Source="/Tools Images/color-picker.png" />
        </Button>

        <Button Grid.Column="2" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Center" Height="26" Margin="0,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="30" Click="Button_Click_1">
            <Image Source="/Tools Images/paint-bucket.png" />
        </Button>

        <Button Grid.Column="2" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="26" Margin="143,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="30" Click="Button_Click_1">
            <Image Source="/Tools Images/font-symbol-of-letter-a.png" />
        </Button>

        <Button Grid.Column="2" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Left" Height="26" Margin="143,55,0,0" Grid.Row="1" VerticalAlignment="Top" Width="30" Click="Button_Click_1">
            <Image Source="/Tools Images/zoom.png" />
        </Button>

        <Rectangle Grid.Column="2" HorizontalAlignment="Left" Height="110" Grid.Row="1" Stroke="#f1f3f9" VerticalAlignment="Center" Width="2" Margin="188,0,0,0"/>

        <!--Brushes column-->
        <Button Grid.Column="3" Panel.ZIndex="10" Background="#f8f9fc" HorizontalAlignment="Center" Height="42" Margin="0,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="32">
            <Image Source="/Tools Images/icons8-brush-48.png" />
        </Button>
        <TextBox Grid.Column="3" BorderThickness="0" HorizontalAlignment="Center" Height="17" Margin="0,87,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Brushes" VerticalAlignment="Top" Width="48" TextChanged="TextBox_TextChanged"/>
        <Button Grid.Column="3" Background="#f8f9fc" HorizontalAlignment="Center" Height="16" Margin="0,58,0,0" Grid.Row="1" VerticalAlignment="Top" Width="32">
            <Image Source="/Images/arrow-down-sign-to-navigate.png" />
        </Button>

        <!--Shapes Column-->
        <Rectangle Grid.Column="4" HorizontalAlignment="Left" Height="110" Grid.Row="1" Stroke="#f1f3f9" VerticalAlignment="Center" Width="2"/>
        <Button Grid.Column="4" BorderThickness="0" Background="#f8f9fc"  HorizontalAlignment="Center" Height="42" Margin="0,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="32">
            <Image Source="/Tools Images/shapes.png"/>
        </Button>
        <Button Grid.Column="4" Background="#f8f9fc" BorderThickness="0" HorizontalAlignment="Center" Height="16" Margin="0,58,0,0" Grid.Row="1" VerticalAlignment="Top" Width="32">
            <Image Source="/Images/arrow-down-sign-to-navigate.png" />
        </Button>
        <TextBlock Grid.Column="4" HorizontalAlignment="Center" Height="19" Margin="0,88,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Shapes" VerticalAlignment="Top" Width="40"/>

        <!--Colors Column-->
        <Rectangle Grid.Column="5" HorizontalAlignment="Left" Height="110" Grid.Row="1" Stroke="#f1f3f9" VerticalAlignment="Center" Width="2"/>
        <TextBlock Grid.Column="5" HorizontalAlignment="Center" Height="21" Margin="0,88,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Colors" VerticalAlignment="Top" Width="35"/>
        <Button Grid.Column="5" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1"  VerticalAlignment="Top" Style="{StaticResource CircleButtonStyle}" Tag="{x:Static Brushes.Black}" Height="32" Width="31" Click="Button_Click_2"/>
        <Button Grid.Column="5" HorizontalAlignment="Left" Margin="10,53,0,0" Grid.Row="1"  VerticalAlignment="Top" Style="{StaticResource CircleButtonStyle}" Tag="{x:Static Brushes.White}" Height="32" Width="31" Click="Button_Click_2"/>

        <!--Panel.ZIndex="10"-->


        <!--Copilot Column-->
        <Button Grid.Column="6" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Center" Height="42" Grid.Row="1" VerticalAlignment="Top" Width="32" Margin="0,16,0,0">
            <Image Source="/Tools Images/icons8-microsoft-copilot-48.png" />
        </Button>
        <Button Grid.Column="6" Background="#f8f9fc" BorderThickness="0" HorizontalAlignment="Center" Height="16" Margin="0,61,0,0" Grid.Row="1" VerticalAlignment="Top" Width="32">
            <Image Source="/Images/arrow-down-sign-to-navigate.png" />
        </Button>
        <TextBlock Grid.Column="6" HorizontalAlignment="Center" Height="15" Margin="0,87,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Copilot" VerticalAlignment="Top" Width="44"/>



        <!--Layer Column-->
        <Button Grid.Column="7" BorderThickness="0" Background="#f8f9fc" HorizontalAlignment="Center" Height="42" Margin="0,15,0,0" Grid.Row="1" VerticalAlignment="Top" Width="32">
            <Image Source="/Tools Images/layers.png"/>
        </Button>
        <TextBlock Grid.Column="7" HorizontalAlignment="Center" Height="22" Margin="0,85,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Layers" VerticalAlignment="Top" Width="36"/>



    </Grid>
</Window>
