    <Window.Resources>
        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse 
                        Fill="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" 
                        Stroke="Gray" 
                        StrokeThickness="1"
                        IsHitTestVisible="False"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallCircleButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse 
                Fill="{TemplateBinding Tag}" 
                Stroke="Gray" 
                StrokeThickness="1" />
                            <Image 
                Source="{TemplateBinding Content}" 
                Width="28" Height="28" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ColoredSliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Track x:Name="PART_Track"
                               VerticalAlignment="Center">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Background="#3b82f6" />
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Background="#e5e7eb" />
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Background="#3b82f6" Width="14" Height="14" BorderThickness="0"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>


